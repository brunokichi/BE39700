<div style="text-align:center">
  <h1>Plataforma de Ingreso</h1>
  <div>
    <a href="/"><button type="button" id="login" disabled style="margin-right:2%"> Iniciar sesion </button></a>
    <!--<a href="/api/sessions/github"><button type="button" id="login_github" style="margin-right:2%"> Iniciar sesion mediante GitHub </button></a>-->
    <a href="/register"><button type="button" id="register" style="margin-right:2%"> Registrate </button></a>
  </div>
  <div style="margin-top:2%">
    <form method="post" action="/api/sessions/login">
      <label for="user">Ingrese su usuario</label>
        <input type="text" id="user" name="user" />
      </br>
      <label for="password">Ingrese su contraseña</label>
        <input type="password" id="password" name="password" style="margin-top:1%"/>
      </br>
      {{mensajeResultado}}
      </br>
      <a href="/forgotpassword"><button type="button" id="forgotpassword" style="margin-right:3%"> Restablecer contraseña </button></a>
      <button type="submit" style="margin-top:1%"> Enviar</button>
    </form>
   
  </div>
  
</div>